<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Energy Score -->
        <TextView
            android:text="Energy Score"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ProgressBar
            android:id="@+id/energyProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:layout_marginBottom="24dp"
            android:progressDrawable="@drawable/circular_progress"/>

        <TextView
            android:id="@+id/energyScoreText"
            android:text="--/100"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <!-- Sleep Summary -->
        <TextView
            android:text="Sleep Summary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/sleepSummaryText"
            android:text="Duration: -- | Quality: --"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Stress Summary -->
        <TextView
            android:text="Stress Level"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/stressSummaryText"
            android:text="--"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Activity Progress -->
        <TextView
            android:text="Activity Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/activitySummaryText"
            android:text="Steps: -- | Workouts: --"
            android:textSize="16sp"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>
</ScrollView>
