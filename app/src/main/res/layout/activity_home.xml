<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:fontFamily="@font/alan_sans_bold"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/summary_card">

        <TextView
            android:id="@+id/textSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps: 0"
            android:textColor="@color/black"
            android:fontFamily="@font/alan_sans_regular" />

        <TextView
            android:id="@+id/textCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories burned: 0 kcal"
            android:textColor="@color/black"
            android:fontFamily="@font/alan_sans_regular"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: 0 km"
            android:textColor="@color/black"
            android:fontFamily="@font/alan_sans_regular"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/textActiveMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active minutes: 0"
            android:textColor="@color/black"
            android:fontFamily="@font/alan_sans_regular"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGoMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meals"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:fontFamily="@font/alan_sans_regular" />

        <Button
            android:id="@+id/btnGoProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:fontFamily="@font/alan_sans_regular"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="invisible" />

</LinearLayout>



