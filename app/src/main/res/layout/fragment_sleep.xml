<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sleepSummaryTitle"
        android:text="Last Night's Sleep"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/sleepDurationText"
        android:text="Duration: --"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/sleepQualityText"
        android:text="Quality Score: --"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/sleepStagesText"
        android:text="Deep/Light/REM: --"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/analyzeSleepButton"
        android:text="Simulate Sleep Analysis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
