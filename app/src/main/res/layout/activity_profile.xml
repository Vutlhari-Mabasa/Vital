<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile &amp; Settings"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:fontFamily="@font/alan_sans_bold"
                android:layout_marginBottom="24dp" />

            <!-- Personal Information Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/alan_sans_bold"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Full Name"
                android:fontFamily="@font/alan_sans_regular"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/inputAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:inputType="number"
                android:textColor="@color/black"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="12dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/inputHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Height (cm)"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="12dp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/inputWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="12dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Profile"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="16dp" />

            <!-- Account Settings Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Settings"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/alan_sans_bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnChangeEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Change Email"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="8dp" />

            <!-- Google Fit Integration Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Fit Integration"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/alan_sans_bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp" />

            <Switch
                android:id="@+id/switchGoogleFit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Google Fit Data Access"
                android:textColor="@color/black"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textGoogleFitStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Fit not connected"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnManageGoogleFit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Google Fit Permissions"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="8dp" />

            <!-- Logout Section -->
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="@color/orange_dark"
                android:textColor="@color/white"
                android:fontFamily="@font/alan_sans_regular"
                android:layout_marginTop="32dp" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="invisible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
